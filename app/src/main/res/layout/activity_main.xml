<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:screenOrientation="landscape"
    android:background="@drawable/home_screen"
    tools:context=".view.MainActivity">

    <ImageView
        android:id="@+id/player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="175dp"
        android:contentDescription="@string/player"
        android:src="@drawable/spaceship" />

    <ImageButton
        android:id="@+id/pauseButton"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/gold_buttons"
        app:srcCompat="@drawable/pause_button"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/upButton"
        android:layout_width="68dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="85dp"
        android:layout_marginBottom="65dp"
        android:background="@color/gold_buttons"
        app:srcCompat="@drawable/up_button"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/downButton"
        android:layout_width="68dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="85dp"
        android:layout_marginBottom="5dp"
        android:background="@color/gold_buttons"
        app:srcCompat="@drawable/down_button"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/rightButton"
        android:layout_width="68dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="160dp"
        android:layout_marginBottom="35dp"
        android:background="@color/gold_buttons"
        app:srcCompat="@drawable/right_button"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/leftButton"
        android:layout_width="68dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="35dp"
        android:background="@color/gold_buttons"
        app:srcCompat="@drawable/left_button"
        tools:ignore="ContentDescription" />

</RelativeLayout>